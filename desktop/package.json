{
  "name": "okcvm-desktop",
  "version": "0.1.0",
  "description": "OKCVM Desktop Application",
  "type": "module",
  "scripts": {
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "dev": "npm run tauri:dev",
    "build": "npm run bundle-backend && npm run tauri:build",
    "bundle-backend": "python scripts/bundle-backend.py",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.56.0",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "@tauri-apps/api": "^1.5.0"
  }
}
